import random

computer_choice = random.randint(0,2)
sign = ['Rock', 'Paper', 'scissors']
player_choice = int(input(" Choose 0 for rock or 1 for paper or 2 for scissors "))
print(f"Player : {sign[player_choice]}")
print(f"Computer : {sign[computer_choice]}")
if computer_choice ==0 and player_choice == 1:
    print("Player Wins")
elif player_choice == 0 and computer_choice ==0:
    print("Computer Wins")
elif computer_choice ==0 and player_choice ==2:
    print("Computer Wins")
elif player_choice ==0 and computer_choice==2:
    print("Player Wins")
elif computer_choice==1 and player_choice==2:
    print("player Wins")
elif player_choice ==1 and computer_choice==2:
    print("Computer Wins")
elif player_choice == computer_choice:
    print("Draw")
else:
    print("Invalid Number")
